[flake8]
exclude =
    .git,
    .gitignore,
    *.pot,
    *.py[co],
    __pycache__,
    venv,
    .env,
    .env.sample,
    settings,
    migrations,
    frontend,
    static,
    former_settings

ignore =
    I201,
    I100,
    C812,

    E121,
    E126,
    E127,
    E128,
    E203,
    E225,
    E226,
    E231,
    E241,
    E251,
    E261,
    E265,
    E302,
    E303,
    E305,
    E402,
    E501,
    E741,
    W291,
    W292,
    W293,
    W391,
    W503,
    W504,
    F403,
    F405,
    B007,
    B950,

max-line-length = 160
max-complexity = 8
